{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "run server",
			"type": "shell",
			"command": "node index.js",
			"isBackground": true,
			"group": "build"
		},
		{
			"label": "send post",
			"type": "shell",
			"command": "powershell",
			"isBackground": false,
			"group": "test"
		},
		{
			"label": "send post",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-File",
				"post.ps1"
			],
			"isBackground": false,
			"group": "test"
		},
		{
			"label": "send post",
			"type": "shell",
			"command": "powershell -File post.ps1",
			"isBackground": false,
			"group": "test"
		}
	]
}